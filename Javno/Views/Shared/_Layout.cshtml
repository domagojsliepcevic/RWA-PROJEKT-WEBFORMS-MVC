<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://kit.fontawesome.com/fa15108486.css" crossorigin="anonymous">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="https://kit.fontawesome.com/fa15108486.js" crossorigin="anonymous"></script>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div  class="flex-grow-1 d-flex justify-content-between">
        <ul class="menu">

            @if (Session["Email"] != null)
            {

                <li class="menu_list">
                    <span class="front fas fa-home"></span>
                    <a href="@Url.Action("Index", "Home")" class="side">home</a>
                </li>
                <li class="menu_list">
                    <span class="front fa-solid fa-magnifying-glass"></span>
                    <a href="@Url.Action("Search", "Apartment")" class="side">Search</a>
                </li>
                <li class="menu_list">
                    <span class="front fas fa-info"></span>
                    <a href="#" class="side">About</a>
                </li>
                <li class="menu_list">
                    <span class="front fas fa-regular fa-envelope"></span>
                    <a href="#" class="side">Contact</a>
                </li>
                <li class="menu_list">
                    <span class="front fa-solid fa-arrow-right-from-bracket"></span>
                    <a id="openModal" class="side">LogOut</a>
                </li>

            }
            else
            {
                <li class="menu_list">
                    <span class="front fas fa-home"></span>
                    <a href="@Url.Action("Index", "Home")" class="side">home</a>
                </li>
                <li class="menu_list">
                    <span class="front fa-solid fa-magnifying-glass"></span>
                    <a href="@Url.Action("Search", "Apartment")" class="side">Search</a>
                </li>
                <li class="menu_list">
                    <span class="front fas fa-info"></span>
                    <a href="#" class="side">About</a>
                </li>
                <li class="menu_list">
                    <span class="front fas fa-regular fa-envelope"></span>
                    <a href="#" class="side">Contact</a>
                </li>
                <li class="menu_list">
                    <span class="front fa-regular fa-registered"></span>
                    <a href="@Url.Action("Registration", "Account")" class="side">Register</a>
                </li>
                <li class="menu_list">
                    <span class="front fa-solid fa-arrow-right-to-bracket"></span>
                    <a href="@Url.Action("LogIn", "Account")" class="side">LogIn</a>
                </li>
            }
        </ul>
        <div class="container body-content">

            @RenderBody()

            <div id="myModal" class="modal" tabindex="-1" role="dialog" style="display: none; flex-direction: column; ">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Sign out?</h5>

                            <span aria-hidden="true">&times;</span>

                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to log out?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="btnSubmit"> Log out</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeModal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <div id="button"></div>
            <div id="container">
                <div id="cont">
                    <div class="footer_center">
                        <h3> RWA Apartments by Domagoj Sliepčević</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/LogoutModal.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
