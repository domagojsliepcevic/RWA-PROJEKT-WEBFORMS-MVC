@model rwaLib.Models.ViewModels.PublicApartment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">

        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>@Model.Name @Model.CityName</h2>
                </div>
                <div class="panel-body">
                    <img src="/Apartment/Picture?Path=@Model.RepresentativePicture.Path" Width="100%">
                </div>
                <div class="panel-footer">@string.Format("€ {0:0.00}", @Model.Price)</div>
            </div>
        </div>

    </div>
</div>