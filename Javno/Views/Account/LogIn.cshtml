@model rwaLib.Models.User

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/Login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>

<body>

    <div class="login-page">
        <div class="form">
            <div class="login">
                <div class="login-header">
                    <h3><span class="text-danger">@ViewBag.Notification</span></h3>
                    <p>Please enter your credentials to login.</p>

                </div>
            </div>
            @using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { @clas = "login-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                


                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                @Html.PasswordFor(model => model.PasswordHash)
                @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
                <button type="submit" value="Login">login</button>
                <p class="message">Not registered? <a href="@Url.Action("Registration", "Account")">Create an account</a></p>

            }
        </div>
    </div>

</body>