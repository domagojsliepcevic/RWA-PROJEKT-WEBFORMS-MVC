@model rwaLib.Models.User

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>

<body>

    <div class="login-page">
        <div class="form">
            <div class="login">
                <div class="login-header">

                    <h3>LOGIN</h3>
                    <p>Please enter your credentials to login.</p>
                </div>
            </div>
            <form asp-controller="Account" asp-action="LogIn" method="post" class="login-form">
                @Html.EditorFor(model => model.Email)
                @Html.PasswordFor(model => model.PasswordHash)
                <button type="submit">login</button>
                <p class="message">Not registered? <a href="@Url.Action("Registration", "Account")">Create an account</a></p>
            </form>
        </div>
    </div>

</body>